<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-xl-4 d-flex justify-content-center align-items-start">
      <div class="card mb-3">
        <div class="card-body p-4">
          <h3>Sign up</h3>
          <p class="font-weight-light text-secondary">It's free and only takes a minute.</p>
          <hr>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <%= f.input :username, required: true, placeholder: "Username", autofocus: true, label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "email" }  %>
            <%= f.input :email, required: true, placeholder: "Email", label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "email" }  %>
            <%= f.input :password,
                  required: true, placeholder: "Password",
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "new-password" }, wrapper_html: { class: "form-group" } %>
            <%= f.input :password_confirmation,
                  required: true, placeholder: "Confirm password",
                  input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "new-password" }, wrapper_html: { class: "form-group" }  %>

          <!-- recaptcha tag -->
          <%= flash[:recaptcha_error] %>
          <%#= recaptcha_tags %>
          <br>
            <%= f.button :submit, "Sign up", class: "btn btn-success btn-block" %>
          <% end %>
          <div class="divider-text">Already have an account?</div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
