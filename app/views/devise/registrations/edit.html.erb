<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-sm-12 col-md-6 justify-content-center align-items-start">
      <div class="card mb-3">
        <div class="card-body p-4">
          <h3>Edit <%= resource_name.to_s.humanize %></h3>
          <p class="font-weight-light text-secondary">Update your user details</p>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

              <%= f.input :username, required: true, autofocus: true, placeholder: "Username", label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "username" } %>

              <%= f.input :time_zone, time_zone_select:ActiveSupport::TimeZone, prompt: false, placeholder: "Time zone", label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200" }  %>

              <%= f.input :email, required: true, autofocus: false, placeholder: "Email", autofocus: true, label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "email" } %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <%= f.input :password, placeholder: "Password",
                          hint: "leave it blank if you don't want to change it",
                          required: false, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "new-password" }, wrapper_html: { class: "form-group" } %>
              <%= f.input :password_confirmation,
                          required: false, placeholder: "Confirm password",
                          input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "new-password" }, wrapper_html: { class: "form-group" } %>
              <%= f.input :current_password,
                          hint: "we need your current password to confirm your changes",
                          required: true, placeholder: "Current password",
                          input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "current-password" }, wrapper_html: { class: "form-group" } %>

            <%= f.button :submit, "Update", class: "btn btn-success" %>
        <% end %>
        <div class="divider-text">Cancel my account</div>
        <!-- <h3>Cancel my account</h3> -->

        <small>Don't leave us ðŸ˜” <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure? It's permanet & all data lost" }, method: :delete, class: "btn btn-danger btn-xs" %></small>

        <%= link_to "Back", :back, class: "btn btn-link" %>
       </div>
      </div>
    </div>
  </div>
</div>


