<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-xl-4 d-flex justify-content-center align-items-start">
      <div class="card mb-3">
        <div class="card-body p-4">
          <h3>Log in</h3>
          <p class="font-weight-light text-secondary">Welcome! Please login to continue.</p>
          <hr>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <%= f.input :email,
                        required: false, placeholder: "Email",
                        autofocus: true, label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false, placeholder: "Password",
                        input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "current-password" }, wrapper_html: { class: "form-group" } %>
            <%= f.input :remember_me, input_html: { class: "custom-control-input" }, label_html: {class: "custom-control-label" }, wrapper_html: { class: "custom-control custom-checkbox" }, as: :boolean if devise_mapping.rememberable? %>

            <!-- recaptcha tags  -->
          <%#= flash[:recaptcha_error] %>
          <%#= recaptcha_tags %>
          <br>
            <%= f.button :submit, "Log in", class: "btn btn-success btn-block" %>
          <% end %>
          <div class="divider-text">Don't have an account?</div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
