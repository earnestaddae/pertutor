<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-xl-4 d-flex justify-content-center align-items-start">
      <div class="card mb-3">
        <div class="card-body p-4">
          <h3>Forgot your password?</h3>
          <p class="font-weight-light text-secondary">enter your email address</p>
          <hr>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
              <%= f.input :email,
                          required: true, placeholder: "Email",
                          autofocus: true, label_html: { class: "font-size-sm"},  wrapper_html: { class: "form-group" }, input_html: { class: "form-control bg-gray-200 border-gray-200", autocomplete: "email" } %>
        <!-- recaptcha tag -->
          <%= flash[:recaptcha_error] %>
          <%= recaptcha_tags %>
          <br>
              <%= f.button :submit, "Send me reset password instructions", class: "btn btn-danger btn-block" %>
          <% end %>

          <div class="divider-text">Already have an account?</div>

            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

