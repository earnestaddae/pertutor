<a href="<%= question_path(question) %>" class="nav-link p-0 m-0" >
  <li class="list-group-item mail-item">
    <div class="media">
      <div class="d-flex">
        <!-- <div class="custom-control custom-control-nolabel custom-checkbox mr-2">
          <input type="checkbox" class="custom-control-input" id="inbox-1">
          <label for="inbox-1" class="custom-control-label"></label>
        </div> -->
        <button type="button" class="btn-starred btn btn-icon btn-xs mr-2" data-toggle="button" aria-pressed="false">
