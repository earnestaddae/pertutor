<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= root_url(subdomain: current_account.subdomain) %>">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Lessons</li>
  </ol>
</nav>
<!-- /Breadcrumb -->

<!-- search bar -->
<div class="card mb-3">
  <div class="card-body p-2" style="height: 47px">
    <div class="d-flex align-items-center collapse transition-none blog-toolbar">
      <button class="btn btn-sm btn-icon mr-2" data-toggle="collapse" data-target=".blog-toolbar">
        <i class="fas fa-chevron-left"></i>
      </button>
      <span class="input-icon input-icon-sm">
        <i class="material-icons">search</i>
        <input type="text" class="form-control form-control-sm bg-gray-200 border-gray-200" placeholder="Search lessons">
      </span>
    </div>
    <div class="d-flex align-items-center collapse transition-none show blog-toolbar">
      <% owners_only do  %>
        <a href="<%= new_admin_lecture_path %>" class="btn btn-outline-primary btn-sm has-icon" type="button">
        <i class="fas fa-plus mr-1"></i> Add new lesson</a>
      <% end %>
      <button class="btn btn-light btn-sm btn-icon ml-auto mr-1" type="button" data-toggle="collapse" data-target=".blog-toolbar">
        <i class="fas fa-search"></i>
      </button>
      <select class="custom-select custom-select-sm w-auto">
        <option value="all">All</option>
        <!-- <option value="published">Published</option>
        <option value="draft">Draft</option> -->
      </select>
    </div>
  </div>
</div>
 <!-- search bar  -->


 <!-- Lessons -->
 <div class="row gutters-sm">
  <% if @lectures.any? %>
    <% @lectures.each do |lecture| %>
      <%= render lecture %>
    <% end %>
  <% else %>
    <h6>There are no lessons ..</h6>
  <% end %>
 </div>
