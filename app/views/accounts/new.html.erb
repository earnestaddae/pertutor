<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-sm-12 col-md-6 justify-content-center align-items-start mt-5 mb-5">
      <div class="card mb-3">
        <div class="card-body p-4">
          <% if user_signed_in? %>
            <%= render "signed_user_form", account: @account %>
          <% else %>
            <%= render "anonymous_user_form", account: @account %>
          <% end %>
       </div>
      </div>
    </div>
  </div>
</div>

