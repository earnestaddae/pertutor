<%= simple_form_for(user, url: users_path) do |f| %>
  <%= f.error_notification %>
  <%= f.input :username, placeholder: "Username", wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>
  <%= f.input :email, placeholder: "Email address", wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>
  <%= f.input :password, placeholder: "Password", wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>
  <%= f.input :password_confirmation, placeholder: "Confirm Password", wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>

  <%#= flash[:recaptcha_error] %>
  <%#= recaptcha_tags %>

  <div class="mt-2"></div>
  <%= f.button :submit, user.new_record? ? "Accept Invitation": "Update Invitation", class: "btn btn-success" %>
<% end %>
