<!-- Breadcrumb -->
<nav aria-label="breadcrumb card-body">
  <ol class="breadcrumb border breadcrumb-style1">
    <li class="breadcrumb-item"><a href="<%= root_url(subdomain: current_account.subdomain) %>">Home</a></li>
    <li class="breadcrumb-item"><a href="<%= forums_path %>">Discussions</a></li>
    <li class="breadcrumb-item active" aria-current="page">Start Discussion</li>
  </ol>
</nav>
<!-- /Breadcrumb -->

<div tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
     <div class="modal-header d-flex align-items-center">
      <h5 class="modal-title mb-0" id="threadModalLabel">New Discussion</h5>
    </div>
      <%= simple_form_for [@forum] do |f| %>
        <%= f.error_notification %>
        <div class="modal-body">
          <%= f.input :title, placeholder: "Enter title", wrapper_html: { class: "form-group" }, input_html: { class: "form-control", id: "blogTitle", autocomplete: "off" } %>

          <%= f.input :summary, placeholder: "Summary", wrapper_html: { class: "form-group" }, input_html: { class: "form-control", id: "blogTitle", autocomplete: "off" } %>

          <%= f.input :body, label: "Content", as: :rich_text_area, placeholder: "Enter details", wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>
        </div>

        <div class="modal-footer">
          <%= link_to "Back", forums_path, class: "btn btn-default" %>
          <%= f.button :submit, @forum.new_record? ? "Post": "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
